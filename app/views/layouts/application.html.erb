<!DOCTYPE html>
<html>
<head>
  <title>GoalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <li><%=error%></li>
  <%end%>
<%end%>

<% if logged_in? %>
<%= current_user.username %>
<%= button_to "Log Out", session_url, method: :delete%>
<% end %>
<%= yield %>

</body>
</html>
